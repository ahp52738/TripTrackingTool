source "https://rubygems.org"
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby "3.0.0"

# Ruby on Rails framework for web development
gem "rails", "~> 7.0.4", ">= 7.0.4.3"

# SQLite3 database adapter for Active Record
gem "sqlite3", "~> 1.4"

# Puma web server
gem "puma", "~> 5.0"

# Asset pipeline for managing assets in Rails
gem "sprockets-rails"

# Importmap for managing JavaScript module imports
gem "importmap-rails"

# Flexible authentication solution for Rails applications
gem 'devise'

# jQuery integration for Rails
gem 'jquery-rails'

# Faster application boot times by caching expensive operations
gem "bootsnap", require: false

gem "rack-cors"
gem "byebug"